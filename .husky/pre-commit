echo "Formatting staged files with Prettier..."
npx lint-staged

echo "Running linting..."
pnpm run lint

# Check if any code-related files have changed
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

# Patterns that indicate code changes that should trigger tests
CODE_PATTERNS="^app/|^src/|^components/|^lib/|^hooks/|^types/|^theme/|\.tsx?$|\.jsx?$|^next\.config|^playwright\.config|^package\.json"
# Patterns for test files (unit and e2e)
TEST_PATTERNS="\.test\.(ts|tsx|js|jsx)$|\.spec\.(ts|tsx|js|jsx)$|^e2e/|^src/tests/"
# Alternative pattern for grep compatibility
TEST_PATTERNS_GREP="\.test\.ts$|\.test\.tsx$|\.test\.js$|\.test\.jsx$|\.spec\.ts$|\.spec\.tsx$|\.spec\.js$|\.spec\.jsx$|^e2e/|^src/tests/"

# Check if test files changed - run unit tests
if echo "$STAGED_FILES" | grep -qE "$TEST_PATTERNS_GREP"; then
  echo "Test files changed. Running unit tests..."
  pnpm run test:run
fi

# Check if code-related files changed - run e2e tests
if echo "$STAGED_FILES" | grep -qE "$CODE_PATTERNS"; then
  echo "Code-related files changed. Running e2e tests..."
  pnpm run test:e2e
else
  echo "No code-related files changed. Skipping e2e tests."
fi
